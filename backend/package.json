{
  "name": "Orange Casino App",
  "version": "1.0.0",
  "description": "Slot game app to bet real money.",
  "main": "dist/server.js",
  "scripts": {
    "build:frontend": "cd ../frontend && npm ci && npm run build && rm -rf ../public/* && cp -r dist/* ../public/",
    "build:backend": "tsc",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@upstash/redis": "^1.35.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0"
  },
  "author": "Gitesh Chauhan",
  "license": "ISC"
}